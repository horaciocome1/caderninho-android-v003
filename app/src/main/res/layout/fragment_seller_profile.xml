<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.tumblr.b1moz.caderninho003.assets.SellerAccountFragment"
    tools:context=".assets.SellerProfileFragment"
    android:layout_marginBottom="?attr/actionBarSize">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/MyAppBarTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_seller_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/MyToolbarTheme"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/app_name"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize">

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/fragment_seller_account_coordinatorlayout_cover"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_seller_profile_cover_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_seller_profile_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:civ_border_color="?android:attr/colorBackground"
                    app:civ_border_width="1dp"
                    android:layout_margin="48dp"
                    android:scaleType="centerCrop"
                    app:layout_anchor="@id/fragment_seller_profile_cover_recyclerview"
                    app:layout_anchorGravity="bottom|right|end"/>

            </android.support.design.widget.CoordinatorLayout>

            <TextView
                android:id="@+id/fragment_seller_profile_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_seller_account_coordinatorlayout_cover"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_text"
                android:textSize="22sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/fragment_seller_profile_address_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_seller_profile_name_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/fragment_seller_profile_speciality_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_seller_profile_address_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <Button
                android:id="@+id/fragment_seller_profile_edit_profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar perfil"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/primary"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/fragment_seller_profile_speciality_textview"/>

            <Button
                android:id="@+id/fragment_seller_profile_advanced_options_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcoes Avancadas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/fragment_seller_profile_edit_profile_button"/>

            <View
                android:id="@+id/fragment_seller_account_divider1"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/fragment_seller_profile_advanced_options_button"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/fragment_seller_account_rating_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/fragment_seller_account_divider1"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/account_people"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_people_black_24dp"
                        android:tint="@color/primary"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/fragment_seller_profile_total_clients_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_below="@+id/account_people"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLIENTES"
                        android:textSize="12sp"
                        android:layout_below="@+id/fragment_seller_profile_total_clients_textview"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/secondary_text"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/star_half"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_half_black_24dp"
                        android:tint="@color/primary"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/fragment_seller_profile_rating_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_below="@+id/star_half"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLASSIFICACAO"
                        android:textSize="12sp"
                        android:layout_below="@+id/fragment_seller_profile_rating_textview"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/secondary_text"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/fragment_seller_account_divider2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/fragment_seller_account_rating_linearlayout"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/fragment_seller_account_store_administrator_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/fragment_seller_account_divider2"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador"
                    android:textColor="@color/accent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"/>

                <ListView
                    android:id="@+id/fragment_seller_profile_administrator_listview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>